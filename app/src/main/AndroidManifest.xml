<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projetf2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.projetensuprs20.activities.EmptyMainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.example.projetensuprs20.activities.MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoPreview"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity android:name="com.example.projetensuprs20.activities.ForgotPasswordActivity" />
        <activity
            android:name="com.example.projetensuprs20.activities.SignUpActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>